@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- New fields -->
            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" class="form-control" placeholder="First Name" />
                <label asp-for="Input.FirstName">First Name</label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control" placeholder="Last Name" />
                <label asp-for="Input.LastName">Last Name</label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.EGN" class="form-control" placeholder="EGN" />
                <label asp-for="Input.EGN">Unique Citizen Number</label>
                <span asp-validation-for="Input.EGN" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone Number" />
                <label asp-for="Input.PhoneNumber">Phone Number</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.UserName" class="form-control" placeholder="Username" />
                <label asp-for="Input.UserName">Username</label>
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>

            <!-- Hidden input field to store registration type -->
            <input type="hidden" id="registrationType" name="registrationType" value="" />

            <!-- Buttons for registering as admin or user -->
            <button id="registerAsUser" type="button" class="w-100 btn btn-lg btn-primary">Register</button>

            <!-- Submit button (hidden by default) -->
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary" style="display: none;">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Function to handle admin registration
        document.getElementById("registerAsAdmin").addEventListener("click", function() {
            document.getElementById("registrationType").value = "admin";
            document.getElementById("registerSubmit").click(); // Trigger form submission
        });

        // Function to handle user registration
        document.getElementById("registerAsUser").addEventListener("click", function() {
            document.getElementById("registrationType").value = "user";
            document.getElementById("registerSubmit").click(); // Trigger form submission
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}