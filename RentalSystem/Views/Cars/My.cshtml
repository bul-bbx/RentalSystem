@model IEnumerable<ReservationListingViewModel>

@{
    ViewData["Title"] = "My Cars";
    const string dateFormat = "dd MMM yyyy hh:mm:ss";
}

<h2>My Cars</h2>

<table class="table">
    <tr>
        <th>Brand</th>
        <th>Model</th>
        <th>Year</th>
        <th>Passenger Seats</th>
        <th>Start Date</th>
        <th>End Date</th>
    </tr>

    @{
        var requests = Model as ReservationListingViewModel[] ?? Model.ToArray();
    }
    @for (int i = 0; i < requests.Length; i++)
    {
        var request = requests[i];

        <tr>
            <td>@request.Car.Brand</td>
            <td>@request.Car.Model</td>
            <td>@request.Car.Year</td>
            <td>@request.Car.PassengerSeats</td>
            <td>@request.StartDate.ToString(dateFormat)</td>
            <td>@request.EndDate.ToString(dateFormat)</td>
        </tr>
    }
</table>