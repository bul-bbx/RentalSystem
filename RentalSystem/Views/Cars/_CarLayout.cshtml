@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <center>
        <div class="col-md-7 ">
            <div class="card login-logout-tab">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item-3">
                                <a class="nav-link" asp-controller="Cars" asp-action="All">All Cars</a>
                            </li>
                            <li class="nav-item-3">
                                <a class="nav-link" asp-controller="Cars" asp-action="My">My Cars</a>
                            </li>
                            <li class="nav-item-3">
                                <a class="nav-link" asp-controller="Cars" asp-action="Create">Create Car</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item-2">
                                <a class="nav-link" asp-controller="Cars" asp-action="All">All Cars</a>
                            </li>
                            <li class="nav-item-2">
                                <a class="nav-link" asp-controller="Cars" asp-action="My">My Cars</a>
                            </li>
                        }
                    </ul>
                </div>
                <div class="card-content">
                    <div class="row">
                        <div class="col-md-12">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </center>
</div>

@section Scripts {
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(function () {
            var current = location.pathname;
            $('.nav-tabs li a').each(function () {
                var $this = $(this);
                if (current.indexOf($this.attr('href')) !== -1) {
                    $this.addClass('active');
                }
            })
        });
    </script>
}